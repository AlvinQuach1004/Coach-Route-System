      .form-control
        = f.date_field :your_date_field, 
          class: 'input input-bordered input-primary w-full shadow-md focus:outline-none focus:ring-2 focus:ring-blue-500',
          id: 'datepicker',
          placeholder: 'Select date'
      = f.button :submit, class: "btn btn-accent w-24"
